#!/usr/bin/env php
<?php

require dirname(__DIR__) . DIRECTORY_SEPARATOR . 'bootstrap.php';

if (ini_get('phar.readonly') == 1)
{
    fwrite(STDERR, 'Has to be called with php setting phar.readonly=0. Try `php -d phar.readonly=0 bin/build`.' . PHP_EOL);

    exit(1);
}

$compiler = new \Archivr\Compiler();
$compiler->compile(__DIR__ . '/../build/archivr.phar');
